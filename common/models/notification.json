{
  "name": "notification",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "hidden": [],
  "properties": {
    "subject": {
      "type": "string",
      "required": true
    },
    "body": {
      "type": "string"
    },
    "state": {
      "type": "string",
      "required": true,
      "default": "new"
    },
    "userId": {
      "type": "string",
      "required": true
    },
    "serviceName": {
      "type": "string"
    },
    "created": {
      "type": "date",
      "default": "$now"
    },
    "channel": {
      "type": "string",
      "default": "inApp"
    },
    "isBroadcast": {
      "type": "boolean",
      "default": false
    },
    "validTill": {
      "type": "date"
    }
  },
  "validations": [],
  "relations": {},
  "acls": [],
  "methods": {}
}
